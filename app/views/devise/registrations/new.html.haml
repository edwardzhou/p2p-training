%h2= t('label.sign_up')
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :email, t('label.email')
    %br/
    = f.text_field :email
  %p
    = f.label :password, t('label.password')
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation, t('label.password_confirmation')
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :nick_name, t("label.nick_name")
    %br/
    = f.text_field :nick_name, :max_length => 20
  %p
    = f.label :gender, t("label.gender")
    %br/
    = f.select :gender, ['male', 'female']
  %p= f.submit t('label.sign_up')
= render :partial => "devise/shared/links"
